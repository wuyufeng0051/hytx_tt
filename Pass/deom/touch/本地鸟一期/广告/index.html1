<script>

   jQuery(document).ready(function () {

        App.init(); // initlayout and core plugins

    });

    $(document).ready(function () {

        $(".switch").click(function () {
            var _this = $(this);
            var url = _this.attr('href');
            $.ajax({
                type: 'GET',
                url: url,
                success: function (data) {
                    if (data.code == 0) {
                        _this.removeClass('green').addClass('red').html( data.message);
                    } else {
                        _this.removeClass('red').addClass('green').html( data.message);
                    }
                }
            });
            return false;
        })

        $(".btn-del").click(function () {
            if (confirm('确定要删除吗?')) {
                var _this = $(this);
                var url = _this.attr('href');
                $.ajax({
                    type: 'GET',
                    url: url,
                    success: function (data) {
                        if (data.code == 0) {
                            _this.parent().parent().remove();
                        }else {
                            alert(data.message);
                        }
                    }
                });
                return false;
            } else {
                return false;
            }
        })

        // $('.range').change(function(){
        //     var val=$(this).val();
        //     $.ajax({
        //         type:'GET',
        //         url:'form',
        //         data:{range:val},
        //         success:function(){
        //             if($('#'+val).length<=0){
        //                 $('.dataTables_wrapper').hide();
        //             }
        //             $('#'+val).show();
        //             $('#'+val).siblings('.dataTables_wrapper').hide();
        //         }
        //     })
        // })
        $(".choice_box ul li p").click(function(){
            var x = $(this),data = x.attr('data-id');
            $('#'+data).show();
            $('#'+data).siblings('.dataTables_wrapper').hide();
        })
        // var val=$('.range').val();
        // if($('#'+val).length<=0){
        //     $('.dataTables_wrapper').hide();
        // }
        // $('#'+val).show();
        // $('#'+val).siblings('.dataTables_wrapper').hide();

        $('.choice_box ul li').hover(function(){
            var x = $(this);
                x.closest('li').find('.CB_child').show();
        },function(){
            var x = $(this);
                x.closest('li').find('.CB_child').hide();
        })
        $('.CB_child p').click(function(){
            var x = $(this),
                txt = x.text();
            $('.index').find('em i').text("首页+其他");
            $('.job').find('em i').text("招聘求职");
            $('.house').find('em i').text("房产信息");
            $('.second').find('em i').text("二手市场");
            $('.city').find('em i').text("同城货运");
            $('.business').find('em i').text("商家信息");
            $('.dating').find('em i').text("相亲交友");
            x.closest('li').find('em i').text(txt).addClass('red');
            x.closest('li').siblings().find('em i').removeClass('red');
            $('.CB_child').hide();
        })
    })

</script>

